    """
    try:
        ymin_val = int(bbox_raw.get("ymin", 0) or 0)
        xmin_val = int(bbox_raw.get("xmin", 0) or 0)
        ymax_val = int(bbox_raw.get("ymax", BBOX_MAX) or BBOX_MAX)
