        iconRequestedRef.current.add(item.id);

        // ì•„ì´ì½˜ ìƒì„± ìš”ì²­ (ë¹„ë™ê¸°)
        const description = item.description || item.name;
        const language = i18n.language === 'ko' ? 'ko-KR' : 'en-US';

