class ImageGenerationStatus(StrEnum):
    """이미지 생성 상태."""

    PENDING = "pending"
    """생성 대기 중"""

    GENERATING = "generating"
    """생성 중"""

    COMPLETED = "completed"
    """생성 완료"""

    FAILED = "failed"
    """생성 실패"""

    SKIPPED = "skipped"
    """생성 건너뜀 (잔액 부족 등)"""


