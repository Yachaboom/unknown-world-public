    });
  });

  describe('continueSession', () => {
    it('저장된 데이터를 로드하고 store를 복원해야 한다', async () => {
      const saveGame = {
        version: SAVEGAME_VERSION,
        language: 'en-US',
        profileId: 'explorer',
        savedAt: new Date().toISOString(),
        economy: { signal: 123, memory_shard: 45 },
