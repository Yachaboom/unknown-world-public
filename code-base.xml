      (call: unknown[]) =>
        typeof call[0] === 'string' && call[0].includes('Cannot update a component'),
    );

    expect(hasWarning).toBe(false);
  });

  it('should update Zustand store via useEffect, not during render', async () => {
    vi.useFakeTimers();

    // getBoundingClientRect 모킹 (초기 크기 설정용)
