    };

    requestIconsForNewItems();
  }, [items, i18n.language, updateItemIcon, setItemIconStatus]);

  // ì•„ì´í…œ ì„ íƒ í•¸ë“¤ëŸ¬
  const handleSelect = useCallback(
    (itemId: string) => {
