            self.assertEqual(result.model_used, RembgModel.ISNET_ANIME)
            # 명령어에 모델 인자가 포함되었는지 확인
            args, _ = mock_run.call_args
            self.assertIn(RembgModel.ISNET_ANIME, args[0])

