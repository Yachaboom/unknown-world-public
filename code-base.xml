    expect(mockWorldStore.setSceneState).not.toHaveBeenCalledWith(
      expect.objectContaining({ status: 'loading' }),
    );
  });

  it('턴 완료 시 최소 표시 시간 이후 isAnalyzing을 false로 설정해야 함', async () => {
