      currentData = migration.migrate(currentData);
      appliedMigrations.push(`${migration.from} â†’ ${migration.to}`);
    } catch (error) {
      return {
        success: false,
        error: `Migration failed at ${migration.from} â†’ ${migration.to}: ${error}`,
        originalVersion: fromVersion,
      };
    }
  }

  return {
