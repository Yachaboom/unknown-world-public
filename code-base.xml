  /** U-044: 현재 선택된 언어 */
  currentLanguage?: SupportedLanguage;
  /** U-044: 언어 변경 콜백 (profile_select에서만 허용) */
  onLanguageChange?: (language: SupportedLanguage) => void;
}

// =============================================================================
// 컴포넌트
// =============================================================================

/** U-044: 언어 표시 레이블 매핑 */
const LANGUAGE_LABELS: Record<SupportedLanguage, string> = {
  'ko-KR': '한국어',
  'en-US': 'English',
};

/**
 * 데모 프로필 선택 화면.
 * 게임 시작 전에 3종의 프로필 중 하나를 선택합니다.
