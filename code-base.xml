export function upgradeToLatest(input: unknown, fromVersion: string): MigrationOutcome {
  // ì´ë¯¸ ìµœì‹  ë²„ì „ì´ë©´ ê·¸ëŒ€ë¡œ ë°˜í™˜
  if (fromVersion === SAVEGAME_VERSION) {
    return {
