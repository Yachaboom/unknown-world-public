        start_time = datetime.now(UTC)

        # 프롬프트 해시 생성 (원문 로깅 금지 - RULE-007)
        prompt_hash = hashlib.sha256(request.prompt.encode()).hexdigest()[:8]
        logger.debug(
            "[ImageGen] Mock 이미지 생성 요청",
            extra={
                "prompt_hash": prompt_hash,
