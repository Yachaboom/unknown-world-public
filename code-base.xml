            if lines and lines[-1].strip() == "```":
                lines = lines[:-1]
            text = "\n".join(lines)

        data = json.loads(text)
        print(f"JSON parsed OK. Keys: {list(data.keys())}")
    except json.JSONDecodeError as e:
