            raise  # finally ë¸”ë¡ì€ ì‹¤í–‰, ì¢…ë£Œ ì‹ í˜¸ë§Œ ë³´ëƒ„
        except Exception:
            # ì˜ˆì™¸ ë°œìƒ ì‹œ í´ë°± (RULE-004)
            ctx.output = create_safe_fallback(
